<div class="popup popup_opened">
  <div class="popup__wrapper">
    {{> title/title text=title error=false}}
    <form name="upload" class="upload" enctype="multipart/form-data">
      <div class="upload__inputs-wrapper">
        <label class="upload__label" for="input__file">Выбрать файл на компьютере</label>
        <input class="upload__input" name="userfile" type="file" id="input__file">
      </div>
      <p class="upload__error">{{inputError}}</p>
      {{> button/button type="submit" label="Поменять"}}
    </form>
  </div>
</div>
